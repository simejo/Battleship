<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/settings"
            android:id="@+id/textViewSettingsTitle"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/gameMode"
            android:id="@+id/textViewSettingsGameMode"
            android:layout_gravity="left|top"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/textViewSettingsTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupStartView"
            android:layout_below="@+id/textViewSettingsGameMode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boats"
                android:id="@+id/boatsRadioButton"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/girls"
                android:id="@+id/girlsRadioButton"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boys"
                android:id="@+id/boysRadioButton"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/music"
                android:id="@+id/textView6"
                android:paddingTop="20dp"
                android:paddingLeft="5dp"
                android:layout_below="@+id/textViewSettingsTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainMenu"
            android:layout_weight="1"
            android:id="@+id/buttonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:layout_weight="1"
            android:id="@+id/buttonStart" />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music"
        android:id="@+id/checkBoxMusicSettings"
        android:layout_below="@+id/radioGroupStartView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound"
        android:id="@+id/checkBoxSoundSettings"
        android:layout_below="@+id/checkBoxMusicSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
