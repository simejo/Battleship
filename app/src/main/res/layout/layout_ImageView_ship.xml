<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/south" />

    <ImageView
        android:id="@+id/southdestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/southdestroyed" />

    <ImageView
        android:id="@+id/north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/north" />

    <ImageView
        android:id="@+id/northdestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/northdestroyed" />

    <ImageView
        android:id="@+id/east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/east" />

    <ImageView
        android:id="@+id/eastdestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eastdestroyed" />

    <ImageView
        android:id="@+id/west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/west" />

    <ImageView
        android:id="@+id/westdestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/westdestroyed" />

    <ImageView
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/middle" />

    <ImageView
        android:id="@+id/middledestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/middledestroyed" />



</LinearLayout>